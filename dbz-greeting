#!/data/data/com.termux/files/usr/bin/zsh
# Dragon Ball Z Combined Greeting - Shenron + Scouter Stats

# Colors (Catppuccin Frappe)
local GREEN='\033[38;2;166;209;137m'
local YELLOW='\033[38;2;229;200;144m'
local MAUVE='\033[38;2;202;158;230m'
local RED='\033[38;2;231;130;132m'
local BLUE='\033[38;2;140;170;238m'
local RESET='\033[0m'

# Get system stats using fastfetch
get_ram() {
    local data=$(fastfetch --structure Memory --pipe --format json 2>/dev/null | jq -r '.[0].result')
    local total=$(echo $data | jq -r '.total')
    local used=$(echo $data | jq -r '.used')
    local percent=$((used * 100 / total))
    echo $percent
}

get_battery() {
    local bat=$(fastfetch --structure Battery --pipe --format json 2>/dev/null | jq -r '.[0].result[0].capacity' | cut -d'.' -f1)
    echo ${bat:-0}
}

RAM=$(get_ram)
BAT=$(get_battery)

